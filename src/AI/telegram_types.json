{
    "sendMessage": {
        "description": "Send text messages",
        "fields": {
            "chat_id": "int | string (unique identifier for target chat or @username)",
            "text": "string (required)",
            "parse_mode": "string (optional: Markdown, MarkdownV2, HTML)",
            "entities": "array of message entities (optional: bold, italic, url, mention, etc.)",
            "disable_web_page_preview": "boolean (optional, disable link previews)",
            "disable_notification": "boolean (optional, send silently)",
            "protect_content": "boolean (optional, prevents saving/forwarding)",
            "reply_to_message_id": "int (optional, reply to specific message)",
            "allow_sending_without_reply": "boolean (optional)",
            "reply_markup": "inline_keyboard | reply_keyboard | remove_keyboard | force_reply"
        }
    },
    "sendPhoto": {
        "description": "Send photo with optional caption",
        "fields": {
            "chat_id": "int | string",
            "photo": "string (file_id | HTTP URL | attach://<file>)",
            "caption": "string (optional)",
            "parse_mode": "string (optional)",
            "caption_entities": "array (optional)",
            "has_spoiler": "boolean (optional, hides photo until clicked)",
            "disable_notification": "boolean",
            "protect_content": "boolean",
            "reply_markup": "inline_keyboard"
        }
    },
